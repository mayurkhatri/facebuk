<%= form_for [@album, @post], :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :text_content, :class => "col-sm-4 control-label" %>
    <%= f.text_field :text_content%>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= f.submit "submit" %>
    </div>
  </div>
<%end%>